<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="user">
	<resultMap id="resultMapUserVo" type="UserVo">
		<result column="no" property="no" />
		<result column="id" property="id" />
		<result column="password" property="password" />
		<result column="name" property="name" />
		<result column="gender" property="gender" />
	</resultMap>
	
	<!-- 회원들 정보 불러오기 -->
	<select id="selectList" resultMap="resultMapUserVo">
		<![CDATA[
			select 	no, 
					id, 
					password, 
					name, 
					gender 
			from users
		]]>
	</select>
	
	<!-- 회원 1명 정보 로그인용 불러오기 -->
	<select id="login" parameterType="UserVo" resultMap="resultMapUserVo">
		<![CDATA[
			select 	no, 
					name 
			from users 
			where id = #{id} 
			and password = #{password}
		]]>
	</select>
	
	<!-- 세션유지용  -->
	<select id="session" parameterType="int" resultMap="resultMapUserVo">
		<![CDATA[
			select 	no, 
					name 
			from users 
			where no = #{no}
		]]>
	</select>
	
	<!-- 회원들 정보 1명 불러오기 -->
	<select id="getUser" resultMap="resultMapUserVo">
		<![CDATA[
			select 	no, 
					id, 
					password, 
					name, 
					gender 
			from users 
			where no = #{no}
		]]>
	</select>
	
	<!-- 회원정보 등록 -->
	<insert id="userInsert" parameterType="UserVo">
	<![CDATA[
		insert into users 
		values(seq_users_id.nextval, #{id}, #{password}, #{name}, #{gender})
	]]>
	</insert>
	
	<!-- 회원정보 삭제 -->
	<delete id="userDelete" parameterType="int">
		<![CDATA[
			delete from users 
			where no = #{no}
		]]>
	</delete>
	
	<!-- 회원정보 수정 -->
	<update id="userUpdate" parameterType="UserVo">
		<![CDATA[
			update 	users 
			set 	password =#{password}, 
					name =#{name}, 
					gender =#{gender} 
			where no = #{no}
		]]>
	</update>
</mapper>