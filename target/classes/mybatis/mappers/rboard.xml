<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="rboard">
	<resultMap id="resultMapRboardVo" type="RboardVo">
		<result column="no" property="no" />
		<result column="user_no" property="userNo" />
		<result column="title" property="title" />
		<result column="content" property="content" />
		<result column="hit" property="hit" />
		<result column="reg_date" property="regDate" />
		<result column="group_no" property="groupNo" />
		<result column="order_no" property="orderNo" />
		<result column="depth" property="depth" />
		<result column="name" property="name" />
	</resultMap>

	<!-- 목록 -->
	<select id="selectList" resultMap="resultMapRboardVo">
	<![CDATA[
		select 	r.no, 
				r.user_no, 
				r.title, 
				r.content, 
				r.hit, 
		        to_char(r.reg_date,'yy-mm-dd hh:mi') regDate, 
				r.group_no, 
				r.order_no, 
				r.depth, 
				u.name 
		from users u left outer join rboard r on r.user_no=u.no 
		where not r.no is null 
		order by group_no desc, order_no asc
	]]>
	</select>
	
	<select id="selectRboard" parameterType="int" resultMap="resultMapRboardVo">
		<![CDATA[
		select 	r.no, 
				r.user_no, 
				r.title, 
				r.content, 
				r.hit, 
		        to_char(r.reg_date,'yy-mm-dd hh:mi') regDate, 
				r.group_no, 
				r.order_no, 
				r.depth, 
				u.name 
		from users u left outer join rboard r on r.user_no=u.no 
		where r.no = #{no} 
		]]>
	</select>

	<!-- 게시글 조회시 조회수 1증가 -->
	<update id="getHit" parameterType="int">
		<![CDATA[
			update rboard 
			set hit = hit+1 
			where no = #{no}
		]]>
	</update>
	
	<select id="getLastIndex" resultType="int">
		<![CDATA[
		select no 
		from( 
    	select * 
    	from rboard 
    	order by rownum desc) 
		where rownum = 1
		]]>
	</select>
	
	<!-- 새로운 게시글 작성시 -->
	<insert id="insertNewBoard" parameterType="RboardVo">
		<![CDATA[
		insert into rboard(no,user_no,title,content,reg_date,group_no)
		values (seq_rboard_no.nextval, #{userNo},#{title},#{content},sysdate,#{groupNo});
		]]>
	</insert>
	

</mapper>